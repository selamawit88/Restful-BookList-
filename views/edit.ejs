 <% include ./partials/header %>

<div class="ui main text container segment">
    
    <div class="ui huge header"> Edit <%= book.title %> </div>
    
    <form class="ui form" action="/books/<%= book._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="book[title]" value= "<%= book.title %>">
        </div>
        <div class="field">
            <label>Author</label>
            <input type="text" name="book[Author]" value= "<%= book.Author %>">
        </div>
        <div class="field">
             <label>Image</label>
             <input type="text" name="book[image]" value= "<%= book.image %>">
         </div>
         <div class="field"> 
              <label>Book Summary</label>
              <textarea name="book[body]"><%= book.body %></textarea>
          </div>  
               
              <input class="ui green basic basic button" type="submit">
        
    </form>
</div>
<% include ./partials/footer %>